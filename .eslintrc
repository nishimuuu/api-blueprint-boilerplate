---
  extends: airbnb
  rules: 
    no-constant-condition: 1
    valid-jsdoc: 
      - 2
      - 
        requireReturn: false
    no-console: 1
    no-alert: 0
    no-debugger: 1
    no-regex-spaces: 0
    quotes: 
      - 2
      - "single"
    eqeqeq: 2
    no-multi-spaces: 0
    dot-notation: 0
    strict: 0
    semi: 
      - 2
      - "always"
    no-var: 2
    prefer-const: 2
    comma-style: 
      - 2
      - "last"
    comma-spacing: 0
    indent: 
      - 2
      - 2
      - 
        SwitchCase: 1
    key-spacing: 
      - 1
      - 
        beforeColon: false
        afterColon: true
        align: "colon"
    no-multiple-empty-lines: 
      - 1
      - 
        max: 1
  ecmaFeatures: 
    modules: true
  env: 
    es6: true

